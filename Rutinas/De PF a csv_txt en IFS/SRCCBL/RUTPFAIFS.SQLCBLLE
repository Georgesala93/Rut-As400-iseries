      *----------------------------------------------------------------
       READ-TABLA.
      *----------------------------------------------------------------
           EXEC SQL
             SELECT CAMPO1
               INTO :SQL-CAMPO1
               FROM TABLA
              WHERE CAMPO4 = :SQL-CAMPO04
           END-EXEC
           .
      *----------------------------------------------------------------
       CURSOR-SQL.
      *----------------------------------------------------------------
           PERFORM DECLARE-CURSOR
           PERFORM OPEN-CURSOR
           PERFORM READ-CURSOR
           PERFORM UNTIL ( SQLCODE NOT EQUAL ZEROES )
      *      LOGICA DE NEGOCIO
             PERFORM READ-CURSOR
           END-PERFORM
           PERFORM CLOSE-CURSOR
           .
      *----------------------------------------------------------------
       DECLARE-CURSOR.
      *----------------------------------------------------------------
      *----ESTATICO
           EXEC SQL
                DECLARE CURONE SCROLL CURSOR FOR
                 SELECT CAMPO1, CAMPO2, CAMPO3
                  FROM TABLA
                   GROUP BY CODPRO
                   ORDER BY CODPRO
           END-EXEC
      *----DINAMICO
           PERFORM CREATE-SQL-STM
           EXEC SQL
             PREPARE STM1 FROM :W-STRSQL
           END-EXEC
           EXEC SQL
             DECLARE CURONE CURSOR FOR STM1
           END-EXEC
           .
      *----------------------------------------------------------------
       CREATE-SQL-STM.
      *----------------------------------------------------------------
           INITIALIZE  W-STRSQL W-WHESQL W-ORDSQL

           STRING
             "SELECT * FROM "
             FUNCTION TRIM(W-NOMLIB)
             "/"
             FUNCTION TRIM(W-NOMARC)
             DELIMITED BY SIZE INTO W-STRSQL
           END-STRING
           .
      *----------------------------------------------------------------
       OPEN-CURSOR.
      *----------------------------------------------------------------
           EXEC SQL
             OPEN CURONE
           END-EXEC
           CONTINUE.
      *----------------------------------------------------------------
       READ-CURSOR.
      *----------------------------------------------------------------
           INITIALIZE W-REGISTRO

           EXEC SQL
             FETCH NEXT FROM CURONE INTO :W-REGISTRO
           END-EXEC
           CONTINUE.
      *----------------------------------------------------------------
       CLOSE-CURSOR.
      *----------------------------------------------------------------
           EXEC SQL
             CLOSE CURONE
           END-EXEC
           CONTINUE.
